{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/intent_to_liquidate",
    "title": "Intent to Liquidate Schema",
    "definitions": {},
    "required": [
        "intentToLiquidate"
    ],
    "type": "object",
    "properties": {
        "intentToLiquidate": {
            "type": "object",
            "required": [
                "liquidator",
                "liquidationRecordsOffice",
                "dateOfCommencementOfLiquidation"
            ],
            "properties": {
                "liquidator": {
                    "description": "Liquidator (individual or firm).",
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/parties#/definitions/party"
                },
                "liquidationRecordsOffice": {
                    "type": "object",
                    "description": "Liquidation Records Office addresses.",
                    "required": [
                        "mailingAddress",
                        "deliveryAddress"
                    ],
                    "properties": {
                        "mailingAddress": {
                            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                        },
                        "deliveryAddress": {
                            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/address"
                        }
                    }
                },
                "dateOfCommencementOfLiquidation": {
                    "type": "string",
                    "format": "date",
                    "description": "Date of Commencement of Liquidation (YYYY-MM-DD)."
                },
                "courtOrder": {
                    "description": "Court Order (optional).",
                    "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/court_order#/properties/courtOrder"
                }
            }
        }
    }
}
